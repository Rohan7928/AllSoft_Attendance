<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:layout_editor_absoluteY="81dp"
    tools:layout_editor_absoluteX="0dp">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/scroll_view">
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:weightSum="8">
            <ImageView
                android:id="@+id/sh_photo"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_alignParentRight="true"
                android:elevation="9dp"
                android:src="@drawable/addphoto"
                />
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/card_card">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/ur_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="start"
                        android:layout_marginBottom="8dp"
                        android:layout_marginLeft="50dp"
                        android:layout_weight="1"
                        android:fontFamily="@font/supercreative"
                        android:hint="Name"
                        android:padding="4dp"
                        android:textColor="@color/black"
                        android:textSize="20sp"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:hint="type"
                        android:id="@+id/ur_type"
                        android:layout_marginLeft="50dp"
                        android:textColor="@color/black"
                        android:fontFamily="@font/supercreative"/>
                    <TextView
                        android:id="@+id/ur_Text"
                        android:drawableLeft="@drawable/ic_place_black_24dp"
                        android:layout_width="wrap_content"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:layout_marginTop="10dp"
                        android:hint="Location"
                        android:padding="8dp"
                        android:textColor="@color/black"

                        android:fontFamily="@font/supercreative"

                        android:textColorHint="@color/black"
                        android:textSize="16sp" />

                    <TextView
                        android:id="@+id/ur_timeview"
                        android:layout_width="wrap_content"
                        android:layout_weight="1"
                        android:drawableLeft="@drawable/ic_today_black"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:layout_marginTop="10dp"
                        android:fontFamily="@font/supercreative"

                        android:hint="Date"
                        android:padding="8dp"
                        android:textColor="@color/black"
                        android:textColorHint="@color/black"
                        android:textSize="16sp" />
                    <TextView
                        android:id="@+id/ur_id"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:drawableLeft="@drawable/ic_perm_identity_black_24dp"
                        android:layout_marginLeft="5dp"
                        android:fontFamily="@font/supercreative"
                        android:layout_marginTop="10dp"
                        android:hint="Id"
                        android:padding="8dp"
                        android:textColor="@color/black"
                        android:textColorHint="@color/black"
                        android:textSize="16sp" />
                    <TextView
                        android:id="@+id/ur_Mobile"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:drawableLeft="@drawable/ic_perm_identity_black_24dp"
                        android:layout_marginLeft="5dp"
                        android:fontFamily="@font/supercreative"
                        android:layout_marginTop="10dp"
                        android:hint="Id"
                        android:padding="8dp"
                        android:textColor="@color/black"
                        android:textColorHint="@color/black"
                        android:textSize="16sp" />

                    <TextView
                        android:id="@+id/ur_address"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:drawableLeft="@drawable/ic_my_location_black_24dp"
                        android:layout_marginLeft="5dp"
                        android:fontFamily="@font/supercreative"
                        android:layout_weight="1"
                        android:layout_marginTop="10dp"

                        android:hint="Address"
                        android:padding="8dp"
                        android:textColor="@color/black"
                        android:textColorHint="@color/black"
                        android:textSize="16sp" />

                </LinearLayout>



            </com.google.android.material.card.MaterialCardView>


        </RelativeLayout>



    </ScrollView>


</LinearLayout>