<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Admin_Option"
    android:weightSum="4">
<com.google.android.material.appbar.AppBarLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#897EFE"
    android:orientation="vertical"
    android:id="@+id/app_bar">

    <androidx.appcompat.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Welcome"
            android:id="@+id/Admin"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="@dimen/text_20sp"
            ></TextView>

    </androidx.appcompat.widget.Toolbar>

</com.google.android.material.appbar.AppBarLayout>
    <Button
        android:id="@+id/addEmployee"
        android:layout_above="@id/hr_attendance"
            android:textColor="@color/colorPrimaryDark"
            android:elevation="80dp"
            android:layout_weight="1"
            android:textSize="16sp"
            android:fontFamily="@font/supercreative"
             android:layout_width="150dp"
            android:layout_marginLeft="20dp"
            android:drawablePadding="3dp"
            android:layout_height="120dp"
            android:drawableLeft="@drawable/profile"
            android:backgroundTint="@color/white"
            android:background="@drawable/border"
            app:rippleColor="@color/colorPrimary"
            app:icon="@drawable/addemp"
            android:layout_marginTop="100dp"
            android:text="Add Employee"
            android:layout_marginRight="8dp" />

    <Button
        android:id="@+id/hr_attendance"
        android:layout_above="@id/bt_log"
        android:textColor="@color/white"
        android:elevation="80dp"
        android:layout_weight="1"
        android:textSize="16sp"
        android:fontFamily="@font/supercreative"
        android:layout_width="150dp"
        android:layout_marginLeft="20dp"
        android:drawablePadding="3dp"
        android:layout_height="120dp"
        android:drawableLeft="@drawable/notice"
        android:backgroundTint="#897EFE"
        android:background="@drawable/border"
        app:rippleColor="@color/colorPrimary"
        app:icon="@drawable/addemp"
        android:layout_marginTop="10dp"
        android:text="Mark Attendance"
        android:layout_marginRight="8dp"></Button>

    <Button
        android:id="@+id/show_attendance"
        android:layout_centerVertical="true"
        android:textColor="@color/colorPrimaryDark"
        android:elevation="80dp"
        android:layout_alignParentRight="true"
        android:layout_weight="1"
        android:textSize="16sp"
        android:fontFamily="@font/supercreative"
        android:layout_width="150dp"
        android:layout_marginLeft="10dp"
        android:drawablePadding="3dp"
        android:layout_height="120dp"
        android:drawableLeft="@drawable/ic_insert_chart_black_24dp"
        android:backgroundTint="@color/white"
        android:background="@drawable/borderleft"
        app:rippleColor="@color/colorPrimary"
        app:icon="@drawable/addemp"
        android:layout_marginTop="10dp"
        android:text="Show Attendance"
        android:layout_marginRight="20dp"
        android:layout_above="@id/bt_log"/>
    <Button
        android:id="@+id/employeeList"
        android:textColor="@color/white"
        android:elevation="80dp"
        android:layout_weight="1"
        android:textSize="16sp"
        android:fontFamily="@font/supercreative"
        android:layout_width="150dp"
        android:layout_marginLeft="50dp"
        android:drawablePadding="3dp"
        android:layout_height="120dp"
        android:drawableLeft="@drawable/employee_list"
        android:backgroundTint="#897EFE"
        android:background="@drawable/borderleft"
        app:rippleColor="@color/colorPrimary"
        app:icon="@drawable/addemp"
        android:layout_above="@id/hr_attendance"
        android:layout_marginTop="100dp"
        android:text="Employee List"
        android:layout_alignParentRight="true"
        android:layout_marginRight="20dp" />

    <Button
        android:id="@+id/bt_log"
        android:layout_width="80dp"
        android:layout_height="80dp"
         android:layout_centerHorizontal="true"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="30dp"
        android:layout_marginBottom="100dp"
        android:layout_marginRight="8dp"
        android:layout_weight="1"
        android:layout_alignParentBottom="true"
        android:background="@drawable/roundbutton"
        android:backgroundTint="@android:color/holo_red_light"
        android:drawableLeft="@drawable/logout"
        android:drawablePadding="2dp"
        android:elevation="80dp"
        android:fontFamily="@font/supercreative"
        android:text="Logout"
        android:textColor="@color/white"
        android:textSize="12sp"
        app:icon="@drawable/addemp"
        app:rippleColor="@color/colorPrimary" />

</RelativeLayout>