<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="9"
    android:id="@+id/liner"
    tools:context=".Detail">

    <RelativeLayout
        android:id="@+id/relative"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@color/colorPrimaryDark"
        android:elevation="10dp">
        <TextView
            android:layout_centerInParent="true"
            android:layout_width="match_parent"
            android:textColor="@color/white"
            android:text="Mark Your Attendance"
            android:fontFamily="@font/supercreative"
            android:textSize="30dp"
            android:textAlignment="center"
            android:layout_height="wrap_content"/>
    </RelativeLayout>

    <com.mikhaellopez.circularimageview.CircularImageView
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/add_photo"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_marginTop="8dp"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center"
        android:background="@drawable/background_nav_header_user_img"
        android:elevation="9dp"
        android:src="@drawable/addphoto"
        app:civ_border_color="#FFFFFF"
        app:civ_border_width="1dp"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/scroll_view"
        android:layout_weight="6"
        android:visibility="gone">
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:weightSum="8">

            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/m_card">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/user_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_weight="1"
                        android:layout_marginBottom="16dp"
                        android:hint="Name"
                        android:textColor="@color/black"
                        android:fontFamily="@font/supercreative"
                        android:padding="4dp"
                        android:textSize="20sp"
                        android:textStyle="bold" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">


                       <RadioGroup
                           android:layout_width="match_parent"
                           android:layout_height="wrap_content"
                           android:layout_marginTop="2dp"
                           android:id="@+id/current"
                           android:layout_weight="1"
                           android:orientation="horizontal">
                           <RadioButton
                               android:layout_width="wrap_content"
                               android:layout_height="wrap_content"
                               android:layout_marginLeft="130dp"
                               android:id="@+id/in"
                               android:textColor="@color/black"
                               android:fontFamily="@font/supercreative"

                               android:text="IN"></RadioButton>
                           <RadioButton
                               android:layout_width="wrap_content"
                               android:layout_height="wrap_content"
                               android:layout_marginLeft="50dp"
                               android:text="OUT"
                               android:textColor="@color/black"
                               android:fontFamily="@font/supercreative"

                               android:id="@+id/out"></RadioButton>
                       </RadioGroup>
                    </LinearLayout>
                    <TextView
                            android:id="@+id/locationText"
                            android:drawableLeft="@drawable/ic_place_black_24dp"
                            android:layout_width="match_parent"
                            android:layout_weight="1"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="5dp"
                            android:layout_marginTop="10dp"
                            android:hint="Location"
                            android:padding="8dp"
                            android:textColor="@color/black"

                        android:fontFamily="@font/supercreative"

                        android:textColorHint="@color/black"
                            android:textSize="16sp" />

                        <TextView
                            android:id="@+id/current_time_view"
                            android:layout_width="match_parent"
                            android:layout_weight="1"
                            android:drawableLeft="@drawable/ic_today_black"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="5dp"
                            android:layout_marginTop="10dp"
                            android:fontFamily="@font/supercreative"

                            android:hint="Date"
                            android:padding="8dp"
                            android:textColor="@color/black"
                            android:textColorHint="@color/black"
                            android:textSize="16sp" />
                        <TextView
                            android:id="@+id/d_id"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:drawableLeft="@drawable/ic_perm_identity_black_24dp"
                            android:layout_marginLeft="5dp"
                            android:fontFamily="@font/supercreative"
                            android:layout_marginTop="10dp"
                            android:hint="Id"
                            android:padding="8dp"
                            android:textColor="@color/black"
                            android:textColorHint="@color/black"
                            android:textSize="16sp" />

                        <TextView
                            android:id="@+id/user_address"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:drawableLeft="@drawable/ic_my_location_black_24dp"
                            android:layout_marginLeft="5dp"
                            android:fontFamily="@font/supercreative"
                            android:layout_weight="1"
                            android:layout_marginTop="10dp"

                            android:hint="Address"
                            android:padding="8dp"
                            android:textColor="@color/black"
                            android:textColorHint="@color/black"
                            android:textSize="16sp" />
                    <com.google.android.material.floatingactionbutton.FloatingActionButton
                        android:id="@+id/getLocationBtn"
                        android:layout_gravity="center"
                        android:visibility="gone"
                        android:layout_width="wrap_content"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_check_black_24dp"
                        android:layout_marginTop="10dp"
                        app:elevation="6dp"
                        app:pressedTranslationZ="12dp"/>
                </LinearLayout>



            </com.google.android.material.card.MaterialCardView>


        </RelativeLayout>



    </ScrollView>



</LinearLayout>