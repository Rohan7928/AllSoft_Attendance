<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Information">
    <RelativeLayout
        android:id="@+id/relative"
        android:layout_width="match_parent"
        android:layout_height="120dp"

        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="match_parent"
            android:layout_height="100dp"

            android:layout_marginTop="-10dp"
            android:background="@drawable/waves" />

    </RelativeLayout>

    <ImageView
        android:id="@+id/show_photo"
        android:layout_width="350dp"
        android:layout_height="250dp"
        android:layout_marginTop="-20dp"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center"
        android:elevation="9dp"
        android:src="@drawable/addphoto"
        />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/scroll_view">
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:weightSum="8">

            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/m_card">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/u_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginBottom="16dp"
                        android:layout_weight="1"
                        android:fontFamily="@font/supercreative"
                        android:hint="Name"
                        android:padding="4dp"
                        android:textColor="@color/black"
                        android:textSize="20sp"
                        android:textStyle="bold" />

                   <TextView
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:hint="type"
                       android:id="@+id/ty_pe"
                       android:layout_gravity="center"
                       android:textColor="@color/black"
                       android:fontFamily="@font/supercreative"/>
                    <TextView
                        android:id="@+id/location_Text"
                        android:drawableLeft="@drawable/ic_place_black_24dp"
                        android:layout_width="match_parent"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:layout_marginTop="10dp"
                        android:hint="Location"
                        android:padding="8dp"
                        android:textColor="@color/black"

                        android:fontFamily="@font/supercreative"

                        android:textColorHint="@color/black"
                        android:textSize="16sp" />

                    <TextView
                        android:id="@+id/c_timeview"
                        android:layout_width="match_parent"
                        android:layout_weight="1"
                        android:drawableLeft="@drawable/ic_today_black"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:layout_marginTop="10dp"
                        android:fontFamily="@font/supercreative"

                        android:hint="Date"
                        android:padding="8dp"
                        android:textColor="@color/black"
                        android:textColorHint="@color/black"
                        android:textSize="16sp" />
                    <TextView
                        android:id="@+id/id_id"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:drawableLeft="@drawable/ic_perm_identity_black_24dp"
                        android:layout_marginLeft="5dp"
                        android:fontFamily="@font/supercreative"
                        android:layout_marginTop="10dp"
                        android:hint="Id"
                        android:padding="8dp"
                        android:textColor="@color/black"
                        android:textColorHint="@color/black"
                        android:textSize="16sp" />

                    <TextView
                        android:id="@+id/u_address"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:drawableLeft="@drawable/ic_my_location_black_24dp"
                        android:layout_marginLeft="5dp"
                        android:fontFamily="@font/supercreative"
                        android:layout_weight="1"
                        android:layout_marginTop="10dp"

                        android:hint="Address"
                        android:padding="8dp"
                        android:textColor="@color/black"
                        android:textColorHint="@color/black"
                        android:textSize="16sp" />

                </LinearLayout>



            </com.google.android.material.card.MaterialCardView>


        </RelativeLayout>



    </ScrollView>

</LinearLayout>