<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HomePage"
    android:background="@drawable/go_bg">
    <RelativeLayout
        android:id="@+id/relative_Layout"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_weight="1"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="match_parent"
            android:layout_height="100dp"

            android:layout_marginTop="-10dp"
            android:background="@drawable/waves" />

    </RelativeLayout>
    <Button
        android:textColor="@color/white"
        android:elevation="80dp"
        app:cornerRadius="@dimen/text_20sp"
        android:layout_below="@id/relative_Layout"
        android:layout_weight="1"
        android:textSize="12sp"
        android:layout_gravity="center_horizontal"
        android:layout_width="180dp"
        android:layout_marginLeft="50dp"
        android:id="@+id/mark_attendance"
        android:layout_centerInParent="true"
        android:drawablePadding="-30dp"

        android:layout_height="50dp"
        android:drawableLeft="@drawable/profile"
        android:backgroundTint="@color/colorPrimaryDark"
        android:background="@drawable/roundbutton"
        app:rippleColor="@color/colorPrimary"
        app:icon="@drawable/addemp"
        android:layout_marginTop="200dp"
        android:text="Mark Attendance"
        android:layout_marginRight="8dp" />
    <Button
        android:textSize="12sp"
        android:layout_weight="1"
        android:layout_centerInParent="true"
        app:rippleColor="@color/colorPrimaryDark"
        android:textColor="@color/white"
        android:layout_below="@id/mark_attendance"
        android:elevation="80dp"
        android:layout_marginTop="@dimen/text_20sp"
        app:cornerRadius="@dimen/text_20sp"
        android:backgroundTint="@color/colorPrimaryDark"
        android:id="@+id/check_attendance"

        android:background="@drawable/roundbutton"
        android:layout_width="180dp"
        android:drawableLeft="@drawable/employee_list"
        android:drawablePadding="-20dp"
        android:layout_height="50dp"
        app:icon="@drawable/employee_list"
        android:text="Check Attendance" />
    <Button
        android:textColor="@color/white"
        android:elevation="80dp"
        app:cornerRadius="@dimen/text_20sp"
        android:layout_weight="1"
        android:backgroundTint="@android:color/holo_red_light"
        android:textSize="12sp"
        android:layout_gravity="start"
        android:drawablePadding="-30dp"

        android:background="@drawable/roundbutton"
        android:layout_below="@id/check_attendance"
        android:layout_width="150dp"
        android:layout_marginTop="@dimen/text_20sp"
        android:id="@+id/bt_logout"
        android:layout_height="50dp"
        app:rippleColor="@color/colorPrimaryDark"
        app:icon="@drawable/logout"
        android:text="Logout"
        android:drawableLeft="@drawable/logout"

        android:layout_centerInParent="true"
        android:layout_marginLeft="50dp" />

</RelativeLayout>