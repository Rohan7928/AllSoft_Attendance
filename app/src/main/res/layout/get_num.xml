<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10dp">



    <androidx.cardview.widget.CardView
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


        <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/txt_email"
        android:textColor="@color/black"
        android:fontFamily="@font/supercreative"
        android:textSize="@dimen/text_20sp"
        android:drawableLeft="@drawable/ic_email_black"
        android:layout_below="@id/txt_num"
        android:drawablePadding="@dimen/text_20sp"
        android:hint="Email"></TextView>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/txt_num"
        android:drawableLeft="@drawable/ic_phone"
        android:textColor="@color/black"
        android:drawablePadding="@dimen/text_20sp"
        android:fontFamily="@font/supercreative"
        android:textSize="@dimen/text_20sp"
        android:layout_marginBottom="10dp"
        android:layout_below="@id/txt_name"
        android:hint="Number"></TextView>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/txt_name"
        android:textColor="@color/colorPrimaryDark"
        android:fontFamily="@font/supercreative"
        android:textSize="@dimen/text_20sp"
        android:layout_marginTop="30dp"
        android:layout_centerHorizontal="true"
        android:hint="Name"></TextView>


            <ImageView
                android:id="@+id/img_call"
                android:layout_width="wrap_content"
                android:layout_height="38dp"

                android:layout_below="@id/txt_email"
                android:layout_alignParentRight="true"
                android:layout_marginTop="10dp"
                android:src="@drawable/ic_phone"/>
    </RelativeLayout>
</androidx.cardview.widget.CardView>

</LinearLayout>