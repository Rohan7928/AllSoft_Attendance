<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10dp"
    android:layout_marginTop="5dp">

    <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:id="@+id/card"
            android:weightSum="6"
            android:layout_height="wrap_content" >
<RelativeLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">
     <TextView
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:id="@+id/name"
         android:hint="Name"
         android:textSize="20sp"
         android:textColor="@color/colorPrimaryDark"
         android:layout_centerHorizontal="true"
         android:textAllCaps="false"/>
        <TextView
            android:id="@+id/type"
            android:layout_width="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_height="wrap_content"
            android:hint="Type"
            android:fontFamily="@font/supercreative"
            android:textSize="20sp"
            android:layout_weight="1"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:padding="4dp"

            android:textStyle="bold" />
       <TextView
                android:id="@+id/txt_loc"
                android:drawableLeft="@drawable/ic_place_black_24dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="2dp"
                android:layout_weight="1"
                android:layout_below="@id/type"
                android:hint="Location"
                android:padding="8dp"
                android:textColor="@color/black"
                android:textColorHint="@color/black"
           android:fontFamily="@font/supercreative"
                android:textSize="16sp" />
       <TextView
                android:id="@+id/txt_time"
                android:layout_below="@id/txt_loc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginLeft="2dp"
                android:drawableLeft="@drawable/ic_today_black_24dp"
                android:hint="Date"
                android:padding="8dp"
                android:textColor="@color/black"
                android:textColorHint="@color/black"
           android:fontFamily="@font/supercreative"
                android:textSize="16sp" />
       <TextView
                android:id="@+id/txt_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginLeft="2dp"
                android:drawableLeft="@drawable/ic_perm_identity_black_24dp"
                android:layout_below="@id/txt_time"
                android:hint="Id"
                android:padding="8dp"
                android:textColor="@color/black"
                android:textColorHint="@color/black"
           android:fontFamily="@font/supercreative"
                android:textSize="16sp" />
        <ImageView
            android:id="@+id/show_photo"
            android:layout_width="150dp"
            android:layout_height="100dp"
            android:layout_weight="1"
            android:layout_alignParentRight="true"
            android:layout_marginTop="10dp"
            android:layout_below="@id/type"
            android:elevation="9dp"

            android:src="@drawable/addphoto"
            />

        <TextView
            android:id="@+id/txt_address"
            android:layout_below="@+id/txt_id"
            android:layout_gravity="bottom"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/ic_my_location_black_24dp"
            android:layout_marginLeft="2dp"
            android:layout_marginTop="8dp"
            android:fontFamily="@font/supercreative"

            android:hint="Address"
            android:padding="8dp"
            android:textColor="@color/black"
            android:textColorHint="@color/black"
            android:textSize="16sp" />
</RelativeLayout>

        </androidx.cardview.widget.CardView>



   </RelativeLayout>